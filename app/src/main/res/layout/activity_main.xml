<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fd_light_bg"
    tools:context=".Start_up">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="146dp"
        android:layout_height="138dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fd_logo" />

    <Button
        android:id="@+id/button5"
        android:layout_width="329dp"
        android:layout_height="53dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/fd_btn"
        android:fontFamily="@font/montserrat_bold"
        android:onClick="openSignIn"
        android:text="Login"
        android:textSize="12sp"
        app:backgroundTint="@color/fd_btn_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/button18"
        android:layout_width="329dp"
        android:layout_height="53dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/fd_btn"
        android:fontFamily="@font/montserrat_bold"
        android:onClick="openSignUp"
        android:text="Register"
        android:textSize="12sp"
        app:backgroundTint="@color/fd_btn_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button5" />

    <Button
        android:id="@+id/button6"
        android:layout_width="329dp"
        android:layout_height="53dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/fd_btn"
        android:fontFamily="@font/montserrat_bold"
        android:text="Login"
        android:textSize="12sp"
        app:backgroundTint="@color/fd_btn_1"
        app:layout_constraintBottom_toTopOf="@+id/button7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button7"
        android:layout_width="329dp"
        android:layout_height="53dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/fd_btn"
        android:fontFamily="@font/montserrat_bold"
        android:text="Register"
        android:textSize="12sp"
        app:backgroundTint="@color/fd_btn_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="1dp"

        android:layout_marginBottom="16dp"
        android:background="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="@+id/button6"
        app:layout_constraintStart_toStartOf="@+id/button6" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Are you a farmer?"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button6"
        app:layout_constraintEnd_toEndOf="@+id/button6"
        app:layout_constraintStart_toStartOf="@+id/button6" />
</androidx.constraintlayout.widget.ConstraintLayout>